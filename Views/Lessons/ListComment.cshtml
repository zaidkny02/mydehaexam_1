@model IEnumerable<deha_exam_quanlykhoahoc.ViewModels.CommentViewModel>
@{
}

@if (@Model.Count() > 0)
{
    <table class="row">
    @foreach (var item in Model)
    {
        <tr>
                <td class="col-sm-6">@item.User.FullName</td>
                <td class="col-sm-6" style="text-align:right;">@item.CommentDate</td>
        </tr>
        <tr>
            <td colspan="2">=> @item.Content</td>
        </tr>
    }
    </table>
}
